<i18n-configuration>
	<i18n-message-standards>
		<i18n-message class-name="com.herongtech.i18n.impl.I18nMessageImpl" />
	</i18n-message-standards>
	<i18n-message-contexts>
		<i18n-message class-name="com.herongtech.i18n.impl.I18nMessageContextImpl" />
	</i18n-message-contexts>
	<formater class-name="com.herongtech.format.impl.FormaterImpl">
		<formatPatternDefine prefix-pattern-string="${"
			postfix-pattern-string="}" pattern-string="([$]+[{]+[a-zA-Z0-9[.[_[:[/[#]]]]]]+[}])" />
		<format-providers>
			<format-provider area=""
				class-name="com.herongtech.format.impl.ContextFormater" />
			<format-provider area="context"
				class-name="com.herongtech.format.impl.ContextFormater" />
		</format-providers>
	</formater>
</i18n-configuration>
